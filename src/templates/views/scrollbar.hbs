		<h1 style="text-align: center;"> &rsaquo; </h1>
	</div>
</div>

<script>

let scrollview = document.getElementById("slider");

function function1(value1){

	if(value1 == 1){
	
		scrollview.scrollLeft += document.body.scrollWidth * (80/100);
	}
	else{
		console.log(value1);
		scrollview.scrollLeft -= document.body.scrollWidth * (80/100);
	}
}

window.onresize = () => {
	console.log(document.body.scrollWidth);
}

</script>
</body>
</html>